{
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "printWidth": 140
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 100,
        "htmlWhitespaceSensitivity": "strict"
      }
    }
  ]
}
